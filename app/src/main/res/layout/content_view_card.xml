<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="uk.ac.ncl.djwelsh.checkpoint.ViewCard"
    tools:showIn="@layout/app_bar_view_card"
    android:background="@color/colorBackground">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/card_question"
                android:layout_below="@+id/textView17"
                android:layout_alignParentStart="true"
                android:textColor="@color/colorAccent"
                android:background="@drawable/button_box"
                android:layout_alignParentEnd="true"
                android:padding="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Question"
                android:id="@+id/textView17"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/colorWhite"
                android:layout_marginBottom="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Answer"
                android:id="@+id/textView18"
                android:textColor="@color/colorWhite"
                android:layout_below="@+id/card_question"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Answer"
                android:id="@+id/card_answer"
                android:textColor="@color/colorAccent"
                android:layout_alignParentStart="true"
                android:background="@drawable/button_box"
                android:layout_below="@+id/textView18"
                android:layout_alignEnd="@+id/card_question"
                android:padding="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Rating"
                android:id="@+id/textView24"
                android:textColor="@color/colorWhite"
                android:layout_below="@+id/card_answer"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_rating_display"
                android:layout_below="@+id/textView24"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
